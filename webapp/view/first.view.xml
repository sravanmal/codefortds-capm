<mvc:View controllerName="sravan.ust.tdsapp.controller.first"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <HBox id="_IDGenHBox" class="sapUiSmallMargin" renderType="Bare">
    
    <!-- Left Panel -->
    <VBox id="_IDGenVBox1" width="50%" class="sapUiSmallMarginEnd">
      <Text id="_IDGenText" text="Enter your code below:" />
      <TextArea id="codeInput" rows="15" width="100%" />
      <Button id="_IDGenButton" text="Generate TDS" press="onGenerateTDS" class="sapUiSmallMarginTop" />
    </VBox>

    <!-- Right Panel -->
    <VBox id="_IDGenVBox2" width="50%" class="sapUiSmallMarginBegin">
      <Text id="_IDGenText1" text="Generated Technical Documentation Specification:" />
      <TextArea id="tdsOutput" rows="15" width="100%" editable="false" />
      <Button id="_IDGenButton1" text="Download as Word" press="onDownload" class="sapUiSmallMarginTop" />
    </VBox>

  </HBox>
    </Page>
</mvc:View>