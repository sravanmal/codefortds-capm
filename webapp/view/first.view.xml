<mvc:View controllerName="sravan.ust.tdsapp.controller.first"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <content>
      <HBox id="_IDGenHBox" class="sapUiSmallMargin" renderType="Bare">
    
        <!-- Left Panel -->
        <VBox id="_IDGenVBox1" width="50%" class="sapUiSmallMarginEnd">
          <Text id="_IDGenText" text="Enter your code below:" />
          <TextArea id="codeInput" rows="15" width="100%" />
          <Button id="_IDGenButton" text="Generate FDS" press="onGenerateFDS" class="sapUiSmallMarginTop" tooltip="Generate the Functional Documentation Specification"/>
        </VBox>

        <!-- Right Panel -->
        <VBox id="_IDGenVBox2" width="50%" class="sapUiSmallMarginBegin">
          <Text id="_IDGenText1" text="Generated Functional Documentation Specification:" />
          <TextArea id="fdsOutput" rows="15" width="100%" editable="false" placeholder="Generated output will appear here..."/>
          <Button id="_IDGenButton1" text="Download as Word" press="onDownload" class="sapUiSmallMarginTop" tooltip="Export as Word Document" enabled="false"/>
        </VBox>

      </HBox>
    </content>
    
    </Page>
</mvc:View>